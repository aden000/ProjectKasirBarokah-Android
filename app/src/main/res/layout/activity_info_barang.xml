<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoBarangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25sp"
        >
        <TextView
            android:id="@+id/info_barangTVinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMASI BARANG"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginBottom="35sp"
            />
        <TextView
            android:id="@+id/id_barangTVinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Barang"
            android:layout_below="@id/info_barangTVinfo"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_barangTVinfo"
            android:layout_below="@id/id_barangTVinfo"
            android:text="Nama Barang"
            android:textSize="22sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama_kategoriTVinfo"
            android:layout_below="@id/nama_barangTVinfo"
            android:text="Nama Kategori"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/harga_barangTVinfo"
            android:layout_below="@id/nama_kategoriTVinfo"
            android:text="Harga Barang"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stok_barangTVinfo"
            android:layout_below="@id/harga_barangTVinfo"
            android:text="Stok Barang"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btnUbahInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:text="UBAH"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/btnHapusInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="HAPUS"
            android:background="#fff"
            android:textColor="@color/colorAccent"
            />

        <ProgressBar
            android:id="@+id/progressbarInfoBarang"
            android:layout_width="185dp"
            android:layout_height="211dp"
            android:layout_above="@+id/btnUbahInfo"

            android:layout_below="@+id/info_barangTVinfo"
            android:layout_alignStart="@+id/stok_barangTVinfo"
            android:layout_alignEnd="@+id/nama_barangTVinfo"
            android:layout_marginStart="82dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="236dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>